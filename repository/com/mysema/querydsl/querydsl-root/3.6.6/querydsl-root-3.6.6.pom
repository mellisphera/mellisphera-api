    <profile>
      <id>travis</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <configuration>
              <excludedGroups>com.mysema.testutil.Performance,com.mysema.testutil.ReportingOnly</excludedGroups>
              <disableXmlReport>true</disableXmlReport>
              <printSummary>false</printSummary>
              <excludes>
                <exclude>**/*$*</exclude>
                <exclude>**/DB2*SuiteTest.java</exclude>
                <exclude>**/ExportMSSQLTest.java</exclude>
                <exclude>**/ExportOracleTest.java</exclude>
                <exclude>**/ExportTeradataTest.java</exclude>
                <exclude>**/Oracle*SuiteTest.java</exclude>
                <exclude>**/OracleWithQuotingTest.java</exclude> 
                <exclude>**/MSSQL*SuiteTest.java</exclude>
                <exclude>**/Teradata*SuiteTest.java</exclude>
              </excludes>
              <properties>
                <property>
                  <name>listener</name>
                  <value>com.mysema.testutil.TravisFoldListener</value>
                </property>
              </properties>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>


